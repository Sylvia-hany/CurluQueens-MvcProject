@*
  Views/Shared/_Layout.cshtml
  CurlyProducts - RTL layout with optional sections for Scripts and Styles
*@
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CurlyProducts - @ViewData["Title"]</title>

    <!-- Bootstrap (LTR bundle still works; if you want full RTL support consider bootstrap-rtl or Bootstrap 5 RTL build) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @* Optional per-view styles *@
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color:#7a1620;">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="CurlyQueens Logo" width="40" height="40" class="me-2 rounded-circle" />
                CurlyQueens
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Create">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    @if (User.Identity.IsAuthenticated)
                    {    
                    <li class="nav-item">
                            <a class="nav-link " asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                    }else{
                    
                        <li class="nav-item">
                        <a class="nav-link " asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>



    <div class="container main-content my-5">
        @RenderBody()
    </div>

    <footer class="text-center text-muted py-4">
        <div>© CurlyProducts - @DateTime.Now.Year</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* Render scripts defined in views (fixes the InvalidOperationException) *@
    @RenderSection("Scripts", required: false)
</body>
</html>





@model LoginViewModel 
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-wrapper d-flex justify-content-center align-items-center">
    <div class="auth-card p-4">
        <h2 class="text-center mb-3" style="color:#7a1620">تسجيل الدخول</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger"></span>
            </div>

            

            <div class="d-grid">
                <button type="submit" class="btn btn-primary" style="background:#7a1620;border-color:#7a1620">Login</button>
            </div>

            <div class="mt-3 text-center">
                <a href="/Account/Register">Register</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model CurlyQueens.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Add New Product";
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="text-center mb-4" style="color:#800020;">Add New Curly Product</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="p-4 shadow-lg rounded" style="background-color:#f2f2f2;">
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label fw-bold" style="color:#800020;"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold" style="color:#800020;"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-bold" style="color:#800020;"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label fw-bold" style="color:#800020;">Upload Image</label>

            <input name="ImageFile" class="form-control" type="file"  />
            <span  class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label fw-bold" style="color:#800020;"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        @*  <div class="mb-3">
            <label asp-for="StockQuantity" class="form-label fw-bold" style="color:#800020;"></label>
            <input asp-for="StockQuantity" class="form-control" type="number" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>  *@

        <button type="submit" class="btn text-white w-100 fw-bold" style="background-color:#800020;">Save Product</button>
    </form>

</div>


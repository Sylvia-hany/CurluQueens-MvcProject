@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --burgundy: #6B0F1A;
        --charcoal: #2E2E33;
        --bg: #F5F5F6;
        --accent: #C9A66B;
        --muted: #9CA3AF;
        --white: #FFFFFF;
        --font-family-sans: "Inter", system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    body {
        background-color: var(--bg);
        font-family: var(--font-family-sans);
        color: var(--charcoal);
    }

    /* Hero Banner */
    .hero-banner {
        position: relative;
        background: url('https://via.placeholder.com/1600x600.png/2E2E33/FFFFFF?text=CurlyQueens+Hero+Image') no-repeat center center;
        background-size: cover;
        padding: 8rem 0;
        text-align: center;
        overflow: hidden;
    }

        .hero-banner::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.2);
            z-index: 1;
        }

        .hero-banner .container {
            position: relative;
            z-index: 2;
            background-color: rgba(255,255,255,0.85);
            padding: 2rem 3rem;
            border-radius: 0.5rem;
            display: inline-block;
            max-width: 700px;
            color: var(--charcoal);
            font-family: var(--font-family-sans);
        }

        .hero-banner h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--burgundy);
        }

        .hero-banner p {
            font-size: 1.1rem;
            line-height: 1.5;
        }

        .hero-banner .btn-primary,
        .hero-banner .btn-accent {
            margin-top: 1rem;
            margin-right: 0.5rem;
            font-weight: 600;
        }
</style>

<div class="hero-banner text-center mb-5">
    <div class="container">
        <h1>Nourish Your Natural Curls</h1>
        <p>Discover products designed to celebrate and enhance your unique hair texture.</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-accent btn-lg">Shop Curly Care</a>
    </div>
</div>


@* 1. Hero Banner Section *@
<div class="hero-banner text-center mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Nourish Your Natural Curls</h1>
        <p class="lead my-4">Discover products designed to celebrate and enhance your unique hair texture.</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-accent btn-lg">Shop Curly Care</a>
    </div>
</div>

@* 2. Featured Categories Section *@
<div class="container">
    <h2 class="text-center mb-4">Shop by Category</h2>
    <div class="row g-3">
        @* These would typically be generated from a model *@
        @{
            var categories = new[] { "Leave-in", "Gel", "Masks", "Devices", "Brushes", "Accessories", "Shampoo", "Scrubs" };
        }

        @foreach (var category in categories)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <a href="/Products?category=@category" class="text-decoration-none">
                    <div class="category-card">
                        @* Placeholder for a real icon or image *@
                        <div class="category-card__icon">
                            <i class="bi bi-droplet-fill"></i>
                        </div>
                        <div class="category-card__title">@category</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@* 3. Featured Products Section (Optional but good for e-commerce) *@
<div class="container mt-5 pt-5">
    <h2 class="text-center mb-4">Our Best Sellers</h2>
    <div class="row g-4">
        @* This is a placeholder. Loop through actual product data from your model. *@
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-lg-3 col-md-6">
                <div class="product-card">
                    <img src="https://via.placeholder.com/300x300.png/F5F5F6/6B0F1A?text=Product+Image" class="product-card__image" alt="Product Name">
                    <div class="product-card__body">
                        <h5 class="product-card__title">Best Selling Product @(i + 1)</h5>
                        <p class="product-card__price">$24.99</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@(i + 1)" class="btn btn-outline-primary btn-sm">Details</a>
                            <button class="btn btn-primary btn-sm">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
